<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="nameOfField" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
   onKeyReleased="#whenTypeOnTextField"/>
    <Button fx:id="helloButton" text="hello" GridPane.rowIndex="1" GridPane.columnIndex="0"
    onAction="#onPress"/>
    <Button fx:id="byeButton" text="Bye" GridPane.columnIndex="1" GridPane.rowIndex="1"
    onAction="#onPress"/>
    <CheckBox fx:id="ourCheckBox" text="please tick the box for complition" GridPane.columnIndex="0" GridPane.rowIndex="2"
    onAction="#callCheckBox"/>
    <Label GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="labelUpdate" text="we are not doing anything"/>
</GridPane>