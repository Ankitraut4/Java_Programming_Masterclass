
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml" >
    <left>
        <ListView fx:id="listView" onMouseClicked="#clickOnlistView" >


        </ListView>
    </left>
    <center><VBox style="-fx-background-color:white">
        <TextArea fx:id="textareaData" VBox.vgrow="ALWAYS" >
            <font>
                <Font name="Times New Roman" size="15"/>
            </font>
        </TextArea>
        <HBox>
            <Label text="Due : " >
                <font>
                    <Font name="Times New Roman bold" size="25"/>
                </font>
            </Label>
            <Label fx:id="labelForDate">
                <font>
                    <Font name="Times New Roman bold" size="25"/>
                </font>
            </Label>



        </HBox>
    </VBox>



    </center>
</BorderPane>